# ==============================================
# MegaRAG Environment Configuration
# ==============================================

# ===== SUPABASE =====
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ===== GOOGLE AI (GEMINI) =====
# Default API key for processing
# Note: For white-label mode, each organization provides their own key
GOOGLE_AI_API_KEY=your-google-ai-api-key-here

# White-Label API Configuration
# Encryption key for storing Gemini API keys (32 bytes, base64 encoded)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
ENCRYPTION_KEY=your-32-byte-encryption-key-base64

# ==============================================
# PAYMENT PROVIDERS
# ==============================================
# Enable/disable payment providers
# Set to 'true' to enable, 'false' to disable
NEXT_PUBLIC_STRIPE_ENABLED=false
NEXT_PUBLIC_PAYHIP_ENABLED=true

# ===== STRIPE (Enable when bank approved) =====
# Get from: https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Stripe Price IDs - Create in Stripe Dashboard > Products
NEXT_PUBLIC_STRIPE_STARTER_MONTHLY_PRICE_ID=price_xxx
NEXT_PUBLIC_STRIPE_STARTER_YEARLY_PRICE_ID=price_xxx
NEXT_PUBLIC_STRIPE_PRO_MONTHLY_PRICE_ID=price_xxx
NEXT_PUBLIC_STRIPE_PRO_YEARLY_PRICE_ID=price_xxx
NEXT_PUBLIC_STRIPE_BUSINESS_MONTHLY_PRICE_ID=price_xxx
NEXT_PUBLIC_STRIPE_BUSINESS_YEARLY_PRICE_ID=price_xxx

# ===== PAYHIP =====
# Payhip API Key - Found in Payhip Dashboard > Settings > API
PAYHIP_API_KEY=xxx

# Payhip Product URLs - Create as Membership products in Payhip
# Supports VN cards, PayPal, and international cards
PAYHIP_FREE_URL=https://payhip.com/b/xxx
PAYHIP_STARTER_MONTHLY_URL=https://payhip.com/b/xxx
PAYHIP_STARTER_YEARLY_URL=https://payhip.com/b/xxx
PAYHIP_PRO_MONTHLY_URL=https://payhip.com/b/xxx
PAYHIP_PRO_YEARLY_URL=https://payhip.com/b/xxx
PAYHIP_BUSINESS_MONTHLY_URL=https://payhip.com/b/xxx
PAYHIP_BUSINESS_YEARLY_URL=https://payhip.com/b/xxx

# Payhip Webhook Secret (if provided by Payhip)
PAYHIP_WEBHOOK_SECRET=xxx

# ==============================================
# OPTIONAL CONFIGURATION
# ==============================================
# CHUNK_SIZE_TOKENS=800
# CHUNK_OVERLAP_TOKENS=100
# ENABLE_ENTITY_EXTRACTION=true
# MAX_FILE_SIZE_MB=100

# App URL (for redirects)
NEXT_PUBLIC_APP_URL=http://localhost:3000
